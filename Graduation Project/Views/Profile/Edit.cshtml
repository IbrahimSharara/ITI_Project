
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/editProfile.css" />
<section>
    <h2 class="text-center text-primary">
        <i class="fa-solid fa-pen-to-square"></i> Edit Your Data
    </h2>
    <form method="post" asp-action="SaveEdit"
          asp-controller="Profile"
          class="edit d-flex flex-column align-items-center justify-content-between">
        <!-- first name / last name -->
        <div class="container row">
            <div class="col-12 col-md-6">
                <h4 class="text-primary">First Name</h4>
                <input type="text"
                       class="form-control"
                       placeholder="Enter your first name" />
            </div>
            <div class="col-12 col-md-6">
                <h4 class="text-primary">Last Name</h4>
                <input type="text"
                       class="form-control"
                       placeholder="Enter your Last name" />
            </div>
        </div>
        <!-- birth daye/ Gender -->
        <div class="container row">
            <div class="col-12 col-md-6">
                <h4 class="text-primary">Date of Birth</h4>
                <input type="date" class="form-control" placeholder="mm/dd/yyyy" />
            </div>
            <div class="col-12 col-md-6">
                <h4 class="text-primary">Gender</h4>
                <input type="text"
                       class="form-control"
                       placeholder="Male / Female" />
            </div>
        </div>
        <!-- birth daye/ Gender -->
        <div class="container row">
            <div class="col-12 col-md-6">
                <h4 class="text-primary">Year</h4>
                <input type="text" class="form-control" placeholder="First Year" />
            </div>
            <div class="col-12 col-md-6">
                <h4 class="text-primary">Upload your Picture</h4>
                <input type="file" class="form-control" />
            </div>
        </div>
        <!-- birth daye/ Gender -->
        <div class="container row">
            <div class="col-12 col-md-6">
                <h4 class="text-primary">Phone</h4>
                <input type="tel" class="form-control" placeholder="+20101234556" />
            </div>
            <div class="col-12 col-md-6">
                <h4 class="text-primary">Father Phone</h4>
                <input type="tel" class="form-control" placeholder="+20101234556" />
            </div>
        </div>
        <input type="submit"
               name=""
               id=""
               value="Save Changes"
               class="btn btn-primary m-4 col-6 col-md-3" />
    </form>
</section>
