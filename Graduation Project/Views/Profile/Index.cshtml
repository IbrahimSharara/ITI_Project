
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/profile.css" />
<div class="center row m-auto w-75">
    <!-- left side -->
    <div class="additional col-12 col-md-5 col-sm-12 p-1">
        <div class="user-card flex align-items-center text-center">
            <img src="~/images/1.png" class="user-photo" alt="user image" />
            <div class="name fs-5 text-white">Ibrahim Sharara</div>
            <div class="year fs-6 text-white">Third Year</div>
        </div>
    </div>
    <!-- Right side -->
    <div class="general col-12 col-md-7 col-sm-12 d-flex justify-content-around flex-column">
        <h1 class="col-12 text-center">Ibrahim Sharara</h1>
        <div class="row">
            <h4 class="col-12 col-md-5">Birth date:</h4>
            <h4 class="col-12 col-md-7 text-center">20 / 8 / 1998</h4>
        </div>
        <div class="row">
            <h4 class="col-12 col-md-5">gender:</h4>
            <h4 class="col-12 col-md-7 text-center">Male</h4>
        </div>
        <div class="row">
            <h4 class="col-12 col-md-5">Phone:</h4>
            <h4 class="col-12 col-md-7 text-center">0901233148</h4>
        </div>
        <div class="row">
            <h4 class="col-12 col-md-6">Father Phone:</h4>
            <h4 class="col-12 col-md-6 text-center">01093938247</h4>
        </div>
        <a class="btn btn-primary w-75 center align-self-center" asp-action="Edit" asp-controller="Profile">
            <i class="fa-solid fa-pen-to-square"></i>Edit
        </a>
    </div>
</div>
